{
    "manifest_version": 3,
    "name": "Intranet Calendar Sync",
    "version": "1.0",
    "description": "Extract registered events from intranet and sync with Google Calendar",
    "permissions": [
      "activeTab",
      "storage",
      "scripting",
      "identity",
      "downloads"
    ],
    "host_permissions": [
      "*://*.epitech.eu/*",
      "https://www.googleapis.com/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.jpg",
        "48": "images/icon48.jpg",
        "128": "images/icon128.jpg"
      }
    },
    "icons": {
      "16": "images/icon16.jpg",
      "48": "images/icon48.jpg",
      "128": "images/icon128.jpg"
    },
    "content_scripts": [
      {
        "matches": ["*://*.epitech.eu/*"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "oauth2": {
      "client_id": "407033853944-nrcl6ekdibbuki4g870k9tuuat08p0qh.apps.googleusercontent.com",
      "scopes": [
        "https://www.googleapis.com/auth/calendar"
      ]
    }
  }
